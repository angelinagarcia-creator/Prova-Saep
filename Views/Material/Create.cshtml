@model Material

<h2>Cadastrar Material</h2>

<form asp-action="Create">

    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Nome" class="form-control" />
    </div>

    <div class="form-group">
        <label>Tipo</label>
        <input asp-for="Tipo" class="form-control" />
    </div>

    <div class="form-group">
        <label>Cor</label>
        <input asp-for="Cor" class="form-control" />
    </div>

    <div class="form-group">
        <label>Textura</label>
        <input asp-for="Textura" class="form-control" />
    </div>

    <div class="form-group">
        <label>Unidade de Medida</label>
        <input asp-for="UnidadeDeMedida" class="form-control" />
    </div>

    <div class="form-group">
        <label>Quantidade em Estoque</label>
        <input asp-for="QuantidadeEstoque" class="form-control" />
    </div>

    <div class="form-group">
        <label>Prazo de Validade</label>
        <input asp-for="PrazoDeValidade" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Aplicação</label>
        <input asp-for="Aplicacao" class="form-control" />
    </div>

    <div class="form-group">
        <label>Fabricação</label>
        <input asp-for="Fabricacao" class="form-control" />
    </div>

    <button class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>

</form>
